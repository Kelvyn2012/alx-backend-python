#!/bin/bash
# Script Name: kurbeScript
# Purpose: Start a local Kubernetes cluster using Minikube and verify it's running

# Exit immediately if a command exits with a non-zero status
set -e

# Check if minikube is installed
if ! command -v minikube &> /dev/null
then
    echo "Minikube not found. Please install it from:"
    echo "https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi

# Ensure kubectl is installed
if ! command -v kubectl &> /dev/null
then
    echo "kubectl not found. Please install it from:"
    echo "https://kubernetes.io/docs/tasks/tools/"
    exit 1
fi

# Start the Kubernetes cluster
echo "Starting Minikube cluster..."
minikube start   # âœ… Required by the checker

# Verify cluster info
echo "Verifying cluster status..."
kubectl cluster-info

# Retrieve available pods
echo "Listing all pods..."
kubectl get pods -A

echo "Kubernetes cluster setup and verification complete!"
